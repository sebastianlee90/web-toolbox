{
  "editor.formatOnSave": true,
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "editor.codeActionsOnSave": {
    "source.sortImports": "always",
    "source.removeUnusedImports": "always"
  },
  "typescript.preferences.organizeImports": {
    "typeOrder": "auto",
    "caseFirst": "lower"
  }
}
